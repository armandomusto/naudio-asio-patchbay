<Window x:Class="NAudioAsioPatchBay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NAudio ASIO PatchBay" Height="350" Width="525">
    <Grid>
        <Slider x:Name="sliderVolume1" Value="5" HorizontalAlignment="Left" Margin="83,10,0,0" VerticalAlignment="Top" Height="25" Width="264"/>
        <Slider x:Name="sliderVolume2" Value="5" HorizontalAlignment="Left" Margin="83,40,0,0" VerticalAlignment="Top" Height="24" Width="264"/>
        <Slider x:Name="sliderPan1" Minimum="-1" Maximum="1"  Value="0" HorizontalAlignment="Left" Margin="456,10,0,0" VerticalAlignment="Top" Width="51"/>
        <Slider x:Name="sliderPan2" Minimum="-1" Maximum="1"  Value="0"  HorizontalAlignment="Left" Margin="456,40,0,0" VerticalAlignment="Top" Width="51"/>
        <Label Content="Channel 1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Channel 2" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonBegin" Content="Begin" HorizontalAlignment="Left" Margin="10,97,0,0" VerticalAlignment="Top" Width="75" Click="OnButtonBeginClick"/>
        <ComboBox x:Name="comboAsioDevices" HorizontalAlignment="Left" Margin="202,97,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
